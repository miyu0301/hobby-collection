@model HobbyCollection.Models.FavoriteDetailsViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <h1>Details</h1>
    <div class="row align-items-stretch mt-3 mt-md-5">
        <div class="col-md-8">
            <img src="@(!string.IsNullOrEmpty(Model.Favorite.Image) ? Model.Favorite.Image : "/image/noimage.jpg")"
                class="img-fluid" alt="Favorite Image" />
        </div>
        <div class="col-md-3 ml-auto" data-aos-delay="100">
            <div class="sticky-content">
                <p class="mb-4">
                <ul class="p-0">
                    @foreach (var tag in Model.TagsList)
                        {
                        <li class="list-unstyled  rounded d-inline" style="background-color: #ECE4D6;"><span
                                class="text-muted p-2">@tag.Name</span></li>
                        }
                </ul>
                </p>
                <h2 class="h2">
                    @Html.DisplayFor(model => model.Favorite.Name)
                </h2>
                <p class="mb-4">$ @Html.DisplayFor(model => model.Favorite.Price)
                </p>

                <div class="mb-5">
                    <p>
                        @Html.DisplayFor(model => model.Favorite.Description)
                    </p>
                </div>
                <div class="d-flex gap-3 mt-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Favorite.Id" class="button-format"
                        style="background-color: #B3D6D8;">Edit</a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Favorite.Id" />
                        <input type="submit" value="Delete" class="button-format" style="background-color: #FCDFD7;" />
                    </form>
                    <a asp-action="Index" class="button-format" style="background-color: #D1DAE1;">Back</a>
                </div>
            </div>
        </div>
    </div>
</div>