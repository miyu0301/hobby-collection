@model IEnumerable<HobbyCollection.Models.Tag>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="my-3 my-md-5 d-flex justify-content-between align-items-center">
        <h1>Tag List</h1>
        <p>
            <a asp-action="Create" class="button-format" style="background-color: #FAE497;">Create New</a>
        </p>
    </div>
    <div class="col-md-6">
        @foreach (var item in Model)
        {
            <div class="d-flex justify-content-between">
                <p>
                    @Html.DisplayFor(modelItem => item.Name)
                </p>
                <div class="d-flex gap-2 mb-2">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="button-format"
                        style="background-color: #B3D6D8;">Edit</a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <input type="submit" value="Delete" class="button-format" style="background-color: #FCDFD7;" />
                    </form>
                </div>

            </div>
        }
    </div>
