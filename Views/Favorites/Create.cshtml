@model HobbyCollection.Models.FavoriteCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Favorite</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Favorite.Name" class="control-label"></label>
                <input asp-for="Favorite.Name" class="form-control" />
                <span asp-validation-for="Favorite.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedTagIds" class="control-label"></label>
                <select asp-for="SelectedTagIds" asp-items="Model.TagsList" multiple="multiple"></select>
            </div>
            <div class="form-group">
                <label asp-for="Favorite.Description" class="control-label"></label>
                <input asp-for="Favorite.Description" class="form-control" />
                <span asp-validation-for="Favorite.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Favorite.Price" class="control-label"></label>
                <input asp-for="Favorite.Price" class="form-control" />
                <span asp-validation-for="Favorite.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Favorite.Image" class="control-label"></label>
                <input asp-for="Favorite.Image" class="form-control" />
                <span asp-validation-for="Favorite.Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
